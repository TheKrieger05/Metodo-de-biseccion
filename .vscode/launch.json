{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Depurar ejecutable (Makefile)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/Metodo", // ejecutable generado por Makefile
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // en Linux
      "setupCommands": [
        {
          "description": "Habilitar impresión automática",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Compilacion con make" // esto debe coincidir con tu tasks.json
    }
  ]
}

